@model Race

@{
    List<Driver> drivers = ViewData["DRIVERS"] as List<Driver>;
}

<h1>Nuevo Carrera</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group mb-2">
                <label asp-for="RaceName" class="control-label">Nombre</label>
                <input asp-for="RaceName" class="form-control" />
                <span asp-validation-for="RaceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Circuito</label>
                <input type="file" name="circuit" class="form-control-file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label">Ubicación</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Fecha de inicio</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Fecha de finalización</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WinnerDriverId" class="control-label">Ganador</label>
                <select asp-for="WinnerDriverId" class="form-control">
                    <option value=""></option>
                    @foreach (Driver driver in drivers)
                    {
                        <option value="@driver.DriverID">@driver.DriverName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}